{
  "name": "juax-api",
  "version": "1.0.0",
  "description": "JuaX API - MVP Specification for Orders with Location Snapshots",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --bail=1 --maxWorkers=1",
    "test:watch": "jest --watch --bail=1",
    "test:coverage": "jest --coverage --bail=1",
    "test:integration": "jest tests/integration --bail=1 --maxWorkers=1 --verbose",
    "test:unit": "jest tests --testPathIgnorePatterns=integration --bail=1",
    "test:admin": "jest tests/integration/admin.test.ts --bail=1 --verbose",
    "test:auth": "jest tests/integration/auth.test.ts --bail=1 --verbose",
    "test:orders": "jest tests/integration/orders.test.ts --bail=1 --verbose",
    "test:properties": "jest tests/integration/properties.test.ts --bail=1 --verbose",
    "test:locations": "jest tests/integration/locations.test.ts --bail=1 --verbose",
    "test:websocket": "jest tests/integration/websocket.test.ts --bail=1 --verbose",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "ts-node migrations/run.ts",
    "migrate:create": "ts-node migrations/create.ts",
    "seed": "ts-node migrations/seed.ts",
    "docs": "swagger-jsdoc -d swaggerDef.js src/routes/*.ts -o docs/swagger.json"
  },
  "keywords": [
    "api",
    "rest",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.984.0",
    "@aws-sdk/s3-request-presigner": "^3.984.0",
    "@types/multer": "^2.0.0",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.8.3",
    "uuid": "^9.0.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.8.3",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
